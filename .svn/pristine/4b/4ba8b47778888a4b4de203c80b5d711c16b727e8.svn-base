<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
 <head>	
		<title>编辑导航内容</title>
        
		<!-- Reset Stylesheet -->
		<load href="__PUBLIC__/Admin/Css/reset.css" />
	  
		<!-- Main Stylesheet -->
		<load href="__PUBLIC__/Admin/Css/style.css" />
  
		<!-- jQuery -->
		<load href="__PUBLIC__/Admin/Scripts/jquery-1.8.3.min.js" />



	</head>
       <body style="background:none;margin:10px 10px;">
		
			<div class="content-box"><!-- Start Content Box -->
				
				<div class="content-box-header">
					
					<h3>编辑文章</h3>
				
					<div class="clear"></div>
					
				</div> <!-- End .content-box-header -->
				
				<div class="content-box-content">
		<div class="tab-content default-tab" id="tab2">
					
								<p style="border-bottom: 1px solid #DDDDDD;">
												文章列表
								</p>
                        <table>
							
							<thead>
								<tr>
                                <th>ID</th>
								   <th>标题</th>
								   <th>所属菜单</th>
								   <th>提交时间</th>
								   <th>是否首页</th>
                                   <th>是否热门</th>
                                   <th>操作</th>
								</tr>
								
							</thead>
							<tbody>
								<volist id="voArtList" name="artArr">							
								<tr>
                                	<td>{$voArtList.id}</td>
									<td><a title="点击编辑" href="__URL__/detail/artID/{$voArtList.id}">{$voArtList.title}</a></td>
									<td>{$voArtList.nav_name}({$voArtList.level}级)</td>
									<td>{$voArtList.time|date='Y-m-d H:i',###}</td>
									<td>
                                        <switch name="voArtList.home_page" >
                                            <case value="1">首页大图</case>
                                            <case value="2">首页2位置</case>
                                            <case value="3">首页3位置</case>
                                            <case value="4">首页4位置</case>
                                            <case value="5">首页5位置</case>
                                            <default />不在首页
                                        </switch>

                                    </td>
									<td>
                                        <switch name="voArtList.hot_news" >
                                            <case value="1">整站热门</case>
                                            <case value="2">分类下周热点</case>
                                            <default />不热门
                                        </switch>

                                    </td>
                                    <td>
										<!-- Icons -->
										 <a title="Edit" href="__URL__/detail/artID/{$voArtList.id}"><img alt="Edit" src="__PUBLIC__/Admin/Images/icons/pencil.png"></a>
										 <a title="Delete" href="__URL__/deleteArticle/artID/{$voArtList.id}" onclick="return confirm('确定删除该文章吗？')"><img alt="Delete" src="__PUBLIC__/Admin/Images/icons/cross.png"></a> 
									</td>
								</tr>
                               </volist>
							</tbody>
                            
                            <tfoot>
								<tr>
									<td colspan="6">
										<div class="pagination">
											{$listPage}
										</div> <!-- End .pagination -->
										<div class="clear"></div>
									</td>
								</tr>
							</tfoot>
							
						</table>
					</div>
            
						</div> <!-- End .content-box-content -->
				
			</div> <!-- End .content-box -->
    </body>
    </html>